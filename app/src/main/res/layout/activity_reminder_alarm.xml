<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reminder_alarm"
    android:background="@color/main_orange">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/reminder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratblack"
            android:text="@string/reminder_text_change_litter"
            android:textColor="@color/main_sky_blue"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/reminderIcon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/reminder_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_sand" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ok_reminder_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/reminderIcon"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/main_purple"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/montserratextrabold"
                    android:text="@string/ok_reminder_text"
                    android:textColor="@color/main_orange"
                    android:textSize="30sp"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</RelativeLayout>