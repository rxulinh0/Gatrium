<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".getting_started_one_pet"
    android:background="@color/main_orange">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/tell_us_RelLay">

        <TextView
            android:id="@+id/text_tell_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratblack"
            android:text="@string/so_tell_us"
            android:textColor="@color/main_sky_blue"
            android:textSize="60dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_tell_us"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/main_sky_blue"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="10dp"
            android:id="@+id/is_cat_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/is_cat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/montserratextrabold"
                    android:text="@string/is_cat"
                    android:textColor="@color/main_orange"
                    android:textSize="30dp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/is_cat_card"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/main_sky_blue"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="10dp"
            android:id="@+id/is_dog_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/is_dog_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/montserratextrabold"
                    android:text="@string/is_dog"
                    android:textColor="@color/main_orange"
                    android:textSize="30dp"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/is_dog_card"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="10dp"
            android:id="@+id/card_get_pet_name">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTextPetName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/montserratblack"
                    android:hint="@string/what_is_your_pet_name"
                    android:textColor="@color/main_orange"
                    android:textSize="20dp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_get_pet_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/main_orange"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="10dp"
            app:strokeColor="@color/main_sky_blue"
            app:strokeWidth="2dp"
            android:id="@+id/card_get_owner_name">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTextOwnerName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserratblack"
                android:hint="@string/type_your_name"
                android:textColor="@color/main_sky_blue"
                android:textSize="20dp" />
        </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tell_us_RelLay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@color/main_purple"
        app:cardCornerRadius="50dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        android:id="@+id/ready_card"
        app:strokeWidth="1dp"
        app:strokeColor="@color/main_orange">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserratextrabold"
                android:text="@string/ready"
                android:textColor="@color/main_orange"
                android:textSize="30dp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>